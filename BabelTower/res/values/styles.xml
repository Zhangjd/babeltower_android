<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 图集的Action Bar -->
    <style name="my_actionbar_theme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/my_actionbar_style</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back</item>
    </style>

    <style name="my_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#000000</item>
        <item name="android:titleTextStyle">@style/my_actionbar_title_style</item>
    </style>

    <style name="my_actionbar_title_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>