<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffefefef"
    android:orientation="vertical" >

    <com.bbt.babeltower.layout.CarouselViewPager
        android:id="@+id/vp_main"
        android:layout_width="fill_parent"
        android:layout_height="230dp" />

    <com.bbt.babeltower.layout.IndicatorLayout
        android:id="@+id/indicate_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/vp_main"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:background="#51585d"
        android:gravity="center"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/vp_main_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vp_main"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:text="@string/main_news_text"
        android:textColor="#ff000000"
        android:textSize="14sp" />

</RelativeLayout>