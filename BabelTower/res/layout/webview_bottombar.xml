<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/webview_bottombar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/babeltower_bottombar_background"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/bottombar_like"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:contentDescription="点赞按钮"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/babeltower_like_off" />

    <ImageButton
        android:id="@+id/bottombar_collect"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/bottombar_like"
        android:layout_toRightOf="@+id/bottombar_like"
        android:background="#FFFFFF"
        android:contentDescription="收藏按钮"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/babeltower_collect_off" />

    <TextView
        android:id="@+id/bottombar_like_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/bottombar_collect"
        android:layout_toRightOf="@+id/bottombar_collect"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/webview_bottombar_like"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bottombar_like_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/bottombar_like_textview"
        android:layout_toRightOf="@+id/bottombar_like_textview"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/webview_bottombar_initial_count"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bottombar_pageview_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/bottombar_like_counter"
        android:layout_toRightOf="@+id/bottombar_like_counter"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/webview_bottombar_pageview"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bottombar_pageview_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/bottombar_pageview_textview"
        android:layout_toRightOf="@+id/bottombar_pageview_textview"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/webview_bottombar_initial_count"
        android:textColor="#333333"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/bottombar_play_fullscreen_video"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:contentDescription="全屏按钮"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/message_more"
        android:visibility="invisible" />

</RelativeLayout>