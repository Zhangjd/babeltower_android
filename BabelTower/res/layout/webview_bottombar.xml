<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/webview_bottombar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#44BC49"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingTop="12dp" >

    <Button
        android:id="@+id/bottombar_like"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/message_vote_read" />

    <Button
        android:id="@+id/bottombar_collect"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/bottombar_like"
        android:layout_toRightOf="@+id/bottombar_like"
        android:background="@drawable/news_collect" />

    <TextView
        android:id="@+id/bottombar_like_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/bottombar_collect"
        android:layout_toRightOf="@+id/bottombar_collect"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/webview_bottombar_like"
        android:textColor="#ffffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bottombar_like_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/bottombar_like_textview"
        android:layout_toRightOf="@+id/bottombar_like_textview"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/webview_bottombar_initial_count"
        android:textColor="#ffffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bottombar_pageview_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/bottombar_like_counter"
        android:layout_toRightOf="@+id/bottombar_like_counter"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/webview_bottombar_pageview"
        android:textColor="#ffffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bottombar_pageview_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/bottombar_pageview_textview"
        android:layout_toRightOf="@+id/bottombar_pageview_textview"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/webview_bottombar_initial_count"
        android:textColor="#ffffffff"
        android:textSize="16sp" />

