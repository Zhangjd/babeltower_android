<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="97dip"
        android:background="@drawable/list_view"
        android:minHeight="72dp" >

        <!-- alignparentbottom -->

        <ImageView
            android:id="@+id/post_list_image"
            android:layout_width="132dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="11dp"
            android:contentDescription="@string/post_list_view_image"
            android:scaleType="centerCrop"
            android:src="@drawable/dark_menu_avatar_bg_mask" />

        <TextView
            android:id="@+id/post_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentTop="true"
            android:paddingTop="11dp"
            android:layout_toEndOf="@id/post_list_image"
            android:layout_toRightOf="@id/post_list_image"
            android:ellipsize="end"
            android:lines="3"
            android:textColor="#FF000000"
            android:textIsSelectable="false"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/post_list_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/post_list_image"
            android:layout_toRightOf="@id/post_list_image"
            android:maxLines="1"
            android:paddingBottom="11dp"
            android:textColor="@color/babel_gray_a"
            android:textSize="9.4sp" />

        <TextView
            android:id="@+id/post_list_updated_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:paddingBottom="11dp"
            android:paddingRight="25dp"
            android:textColor="@color/babel_gray_a"
            android:textSize="9.4sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/babel_gray_b" />

</FrameLayout>