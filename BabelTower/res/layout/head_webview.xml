<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_bar"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@drawable/babeltower_actionbar_background" >

    <RelativeLayout
        android:id="@+id/header_switch_area"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginBottom="1dp"
        android:background="@drawable/background_selector" >

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/babeltower_menu_toggle" />

        <TextView
            android:id="@+id/header_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back_button"
            android:ellipsize="end"
            android:paddingRight="11dp"
            android:singleLine="true"
            android:text="@string/header_name"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/webview_collect"
        android:layout_width="38.4dp"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/webview_like"
        android:background="@drawable/background_selector"
        android:contentDescription="收藏按钮"
        android:paddingBottom="11dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="11dp"
        android:scaleType="fitXY"
        android:src="@drawable/babeltower_collect_off" />

    <ImageButton
        android:id="@+id/webview_like"
        android:layout_width="35.4dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_selector"
        android:contentDescription="点赞按钮"
        android:paddingBottom="11dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="11dp"
        android:scaleType="fitXY"
        android:src="@drawable/babeltower_like_off" />

</RelativeLayout>