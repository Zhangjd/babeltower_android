<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_bar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/babeltower_actionbar_background"
    android:paddingBottom="2.25dp"
    android:paddingTop="2dp" >

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="58.5dp"
        android:layout_height="26.5dp"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back_selector" />

    <TextView
        android:id="@+id/header_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/back_button"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/header_name"
        android:textColor="@color/grey"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/webview_collect"
        android:layout_width="45.4dp"
        android:layout_height="38.4dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/webview_like"
        android:background="#FFFFFF"
        android:contentDescription="收藏按钮"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="11dp"
        android:paddingTop="6dp"
        android:scaleType="fitXY"
        android:src="@drawable/babeltower_collect_off" />

    <ImageButton
        android:id="@+id/webview_like"
        android:layout_width="48.4dp"
        android:layout_height="38.4dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:contentDescription="点赞按钮"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="16dp"
        android:paddingTop="6dp"
        android:scaleType="fitXY"
        android:src="@drawable/babeltower_like_off" />

</RelativeLayout>