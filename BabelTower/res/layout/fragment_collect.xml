<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/collect_fragment_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:text="@string/main_news_text"
        android:textColor="#ff000000"
        android:textSize="15sp" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/collect_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        ptr:ptrAnimationStyle="rotate"
        ptr:ptrDrawable="@drawable/babeltower_anim_4"
        ptr:ptrHeaderBackground="#505050"
        ptr:ptrHeaderTextColor="#9fa0a0" >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

</LinearLayout>