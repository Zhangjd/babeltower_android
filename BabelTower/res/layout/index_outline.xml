<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.bbt.babeltower.layout.CarouselViewPager
        android:id="@+id/vp_main"
        android:layout_width="fill_parent"
        android:layout_height="202.5dp" />

    <com.bbt.babeltower.layout.IndicatorLayout
        android:id="@+id/indicate_main"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/vp_main"
        android:background="#00000000"
        android:gravity="right"
        android:layout_marginRight="16dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/vp_main_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vp_main"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/main_news_text"
        android:textColor="@color/grey"
        android:textSize="14sp" />

</RelativeLayout>