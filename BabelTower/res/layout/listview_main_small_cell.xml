<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_view"
        android:minHeight="72.0dip"
        android:paddingBottom="12.0dip" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="18.0dip"
            android:layout_marginRight="18.0dip"
            android:background="#A0A0A0" />

        <ImageView
            android:id="@+id/post_list_image"
            android:layout_width="120.0dip"
            android:layout_height="80.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18.0dip"
            android:layout_marginRight="18.0dip"
            android:layout_marginTop="12.0dip"
            android:contentDescription="@string/post_list_view_image"
            android:scaleType="centerCrop"
            android:src="@drawable/dark_menu_avatar_bg_mask" />

        <TextView
            android:id="@+id/post_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="12.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="12.0dip"
            android:layout_toEndOf="@id/post_list_image"
            android:layout_toRightOf="@id/post_list_image"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.3"
            android:lines="2"
            android:textColor="#FF000000"
            android:textIsSelectable="false"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/post_list_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/post_list_image"
            android:layout_alignLeft="@+id/post_list_text"
            android:layout_alignStart="@+id/post_list_text"
            android:maxLines="1"
            android:textColor="#FF646464" />

        <TextView
            android:id="@+id/post_list_updated_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/post_list_image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="18.0dip"
            android:layout_marginRight="18.0dip"
            android:maxLines="1"
            android:textColor="#FF646464" />
    </RelativeLayout>

</FrameLayout>