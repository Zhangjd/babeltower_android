<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp" >

    <ImageView
        android:id="@+id/chatlist_image_dev"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:background="@drawable/babeltower_icon" />

    <TextView
        android:id="@+id/chatlist_text_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/chatlist_image_dev"
        android:layout_marginRight="50dip"
        android:layout_toRightOf="@id/chatlist_image_dev"
        android:background="@drawable/babeltower_chatlist_dev"
        android:paddingBottom="18dip"
        android:paddingLeft="25dp"
        android:paddingRight="5dp"
        android:paddingTop="13dip"
        android:textColor="@color/grey" />

</RelativeLayout>